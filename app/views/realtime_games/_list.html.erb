<%= form.hidden_field :string, name: 'first_clicked_chess', value: @first_clicked_chess %>
<!--0: chess_id, 1: 3, 2: 师长, 3: blue, 4: position_id, 5: 31, 6: position_type, 7: railway_space-->
<% realtime_game_info.each do |space| %>
  <% tmp = space.split(' ') %>
  <% if tmp[3] == 'red' %>
    <% if tmp[-1] == 'camp' %>
      <%= form.button tmp[2], value: tmp[5], class: 'red_chess normal_chess camp_chess_flag', name: 'clicked_chess' %>
    <% else %>
      <%= form.button tmp[2], value: tmp[5], class: 'red_chess normal_chess', name: 'clicked_chess' %>
    <% end %>

  <% elsif tmp[3] == 'middle' %>
    <% if tmp[-1] == 'camp' %>
      <%= form.button tmp[2], value: tmp[5], class: 'normal_chess camp_chess camp_chess_flag', name: 'clicked_chess' %>
    <% else %>
      <%= form.button tmp[2], value: tmp[5], class: 'normal_chess', name: 'clicked_chess' %>
    <% end %>

  <% elsif tmp[3] == 'blue' %>
    <% if tmp[-1] == 'camp' %>
      <%= form.button tmp[2], value: tmp[5], class: 'blue_chess normal_chess camp_chess_flag', name: 'clicked_chess' %>
    <% else %>
      <%= form.button tmp[2], value: tmp[5], class: 'blue_chess normal_chess', name: 'clicked_chess' %>
    <% end %>

  <% end %>

  <% element_count_inline += 1 %>
  <% if element_count_inline == 5 %>
    <% vertical_count += 1 %>
    <% if vertical_count == 6 %>
      <br>
      <br>
      <br>
    <% end %>
    <br>
    <br>
    <% element_count_inline = 0 %>
  <% end %>

<% end %>